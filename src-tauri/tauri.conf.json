{
    "build": {
        "beforeDevCommand": "",
        "beforeBuildCommand": "",
        "devPath": "../ui",
        "distDir": "../ui",
        "withGlobalTauri": true
    },
    "package": {
        "productName": "Financial Golf",
        "version": "1.0.0"
    },
    "tauri": {
        "allowlist": {
            "all": false,
            "shell": {
                "all": false,
                "open": true,
                "sidecar": true,
                "execute": true,
                "scope": [
                    {
                        "name": "go-engine",
                        "sidecar": true
                    },
                    {
                        "name": "python-engine",
                        "sidecar": true
                    }
                ]
            },
            "fs": {
                "all": false,
                "scope": [
                    "$APPDATA/FinancialGolf/**"
                ]
            }
        },
        "bundle": {
            "active": true,
            "targets": "all",
            "identifier": "com.student.financialgolf",
            "icon": [
                "icons/32x32.png",
                "icons/128x128.png",
                "icons/128x128@2x.png",
                "icons/icon.icns",
                "icons/icon.ico"
            ],
            "externalBin": [
                "bin/go-engine",
                "bin/python-engine"
            ]
        },
        "security": {
            "csp": null
        },
        "windows": [
            {
                "fullscreen": false,
                "height": 720,
                "resizable": true,
                "title": "Financial Golf App - Learn Money, Play Golf",
                "width": 1024,
                "center": true
            }
        ]
    }
}